<hibernate-mapping xmlns="http://www.hibernate.org/xsd/orm/hbm"
                      package="project.domain.entity.employees">

    <class name="Employee" abstract="true">
        <id name="id" column="empl_id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="name"          column="name"          type="java.lang.String"  />
        <property name="surname"       column="surname"       type="java.lang.String"  />
        <property name="position"      column="position"      type="java.lang.String"  />

        <many-to-one
                name="organization"
                class="project.domain.entity.organizations.Organization"
                column="organization"
                not-null="true"
                cascade="save-update"
                lazy="false"
        />
    </class>

    <union-subclass
            name="project.domain.entity.employees.drivers.Driver"
            extends="Employee"
            abstract="true"
    />

    <union-subclass
            name="project.domain.entity.employees.drivers.TruckDriver"
            extends="project.domain.entity.employees.drivers.Driver"
            table="Employees"
    />

    <union-subclass
            name="project.domain.entity.employees.managers.LogisticManager"
            extends="Employee"
            table="Employees"
    />
</hibernate-mapping>