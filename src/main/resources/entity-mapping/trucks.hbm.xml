<hibernate-mapping package="project.domain.entity.truck">

    <class name="Truck" abstract="true">
        <id name="id" column="truck_id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="model" column="model" type="java.lang.String"/>
        <property name="registerNumber" column="registerNumber" type="java.lang.Integer"/>
        <property name="trailer" column="trailer" type="java.lang.String"/>
        <many-to-one
                name="organization"
                class="project.domain.entity.organizations.Organization"
                column="organization"
                not-null="true"
                cascade="save-update"
                lazy="false"
        />
    </class>

    <union-subclass
            name="project.domain.entity.truck.tented.TentedTruck"
            extends="Truck"
            table="Trucks"
    />

    <union-subclass
            name="project.domain.entity.truck.tank.TankTruck"
            extends="Truck"
            table="Trucks"
    />

    <union-subclass
            name="project.domain.entity.truck.refrigerated.RefrigeratedTruck"
            extends="Truck"
            table="Trucks"
    />

</hibernate-mapping>