<hibernate-mapping package="project.domain.entity.pojo.truck">

    <class name="Truck" abstract="true" dynamic-update="true">
        <id name="id" column="truck_id" type="java.lang.Integer">
            <generator class="increment"/>
        </id>
        <property name="model"           column="model"           type="java.lang.String"  />
        <property name="registerNumber"  column="registerNumber"  type="java.lang.Integer" />
        <property name="trailer"         column="trailer"         type="java.lang.String"  />
        <many-to-one
                name="organization"
                class="project.domain.entity.pojo.organization.Organization"
                column="organization"
                not-null="true"
                cascade="none"
                lazy="false"
        />
    </class>

    <union-subclass
            name="project.domain.entity.pojo.truck.tented.TentedTruck"
            extends="Truck"
            table="Trucks"
    />

    <union-subclass
            name="project.domain.entity.pojo.truck.tank.TankTruck"
            extends="Truck"
            table="Trucks"
    />

    <union-subclass
            name="project.domain.entity.pojo.truck.refrigerated.RefrigeratedTruck"
            extends="Truck"
            table="Trucks"
    />

</hibernate-mapping>