            Organization g = new LogisticOrganization();
            g.setName("Мигом-Транс");
            g.setOwner("Черепахов");

            Client c = new LogisticClient();
            c.setName("Весёлый");
            c.setOrganization(g);

            User user = new User();
            user.setUsername("client3");
            user.setPassword("pass3");

            Roles role = Factory.getData(Roles.class).get(1);

            Set<User> users = new HashSet<>();
            users.add(user);
            role.setUsers(users);

            Set<GrantedAuthority> set1 = new HashSet<>();
            set1.add(role);
            user.setAuthorities(set1);

            c.setUser(user);

            Set<Client> set = new HashSet<>();
            set.add(c);
            g.setClients(set);

            Factory.getData(User.class).save(user);
            Factory.getData(Organization.class).save(g);
            Factory.getData(Client.class).save(c);

